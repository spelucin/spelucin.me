---
// Header scroll behavior component
---

<script>
  document.addEventListener('DOMContentLoaded', function () {
    let lastScrollTop = 0;
    const scrollThreshold = 10;
    
    const header = document.getElementById('main-header');
    
    if (!header) {
      return;
    }
    
    function handleScroll() {
      const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
      
      // Only apply the effect after scrolling past a certain threshold
      if (scrollTop > 100) {
        if (scrollTop > lastScrollTop && scrollTop - lastScrollTop > scrollThreshold) {
          // Scrolling down - hide header
          header.classList.add('header-hidden');
        } else if (lastScrollTop > scrollTop && lastScrollTop - scrollTop > scrollThreshold) {
          // Scrolling up - show header
          header.classList.remove('header-hidden');
        }
      } else {
        // At the top of the page - always show header
        header.classList.remove('header-hidden');
      }
      
      lastScrollTop = scrollTop <= 0 ? 0 : scrollTop;
    }
    
    window.addEventListener('scroll', handleScroll, { passive: true });
  });
</script>
